@{
  Layout = "_Layout";
}

@using PSST.Models;

<h1>Pierre's Flavors for: @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 
<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.FlavorDescription}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a new flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>