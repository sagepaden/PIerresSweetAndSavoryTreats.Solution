@{
  Layout = "_Layout";
}

@model PSST.Models.Flavor

<h4>Edit this Flavor: @Html.DisplayFor(model => model.FlavorDescription)</h4>
<div class="col">
<p>@Html.ValidationMessageFor(model => model.FlavorDescription, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.FlavorId)

    @Html.LabelFor(model => model.FlavorDescription, new { htmlAttributes = new { @class = "form-label"}})
    @Html.EditorFor(model => model.FlavorDescription, new { htmlAttributes = new { @class = "form-control"}})
    <br>
    <input type="submit" value="Save" class="btn btn-primary btn-sm"  />
  }
  <br>
  <p>@Html.ActionLink("Back to Flavor list", "Index")</p>
</div>