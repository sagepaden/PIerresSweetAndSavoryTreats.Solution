@{
  Layout = "_Layout";
}

@using PSST.Models

<h1>Pierre's Treats for: @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.TreatDescription}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>