@{
  Layout = "_Layout";
}

@model PSST.Models.Treat

<h4>Add a new Treat</h4>
<div class="col">
  <p>@Html.ValidationMessageFor(model => model.TreatDescription, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.TreatDescription, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.TreatDescription, new { @class = "form-control"})
    <br>
    <input type="submit" value="Add new Treat" class="btn btn-primary btn-sm" />
  }
  <br>
  <p>@Html.ActionLink("Show all Treats", "Index")</p>
</div>